<% include partials/header %>

<div class='container'>
  <header class='jumbotron'>
    <div class='container'>
      <h1> Campgrounds </h1>
      <p> View our campgrounds from all over the world </p>
      <a class='btn btn-primary btn-lg' href='/campgrounds/new'> Add campground </a>
    </div>
  </header>
  <div class='row'>
    <div class='col-lg-12'>
      <h2>Most of popular campgrounds </h2>
    </div>
  </div>

  <div class='row'>
    <ul>
      <% campgrounds.map((campground) => { %>
        <li>
          <div class='col-sm-6 col-md-3'>
            <div class='thumbnail'>
              <img src='<%= campground.image %>' alt='campground image' />

              <div class='caption'>
                <h3> <%= campground.name %> </h3>
              </div>
              <a href='/campgrounds/<%= campground._id %>' class='btn btn-primary'> 
                More info
              </a>
            </div>
          </div>
        </li>
        <% }) %>
      </ul>
  </div>

</div>

<% include partials/footer %>
